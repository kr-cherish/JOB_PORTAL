generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  fname      String
  lname      String
  email      String   @unique
  password   String
  role       Role     @default(USER)
  resume     String?
  skills     String?
  experience String?
  bio        String?

  company   Company? @relation("UserCompany")
  
  applications AppliedJob[] @relation(name: "UserApplications")
}

model Company {
  id             String   @id @default(uuid())
  name           String
  description    String
  logo           String?
  website        String?
  employeeSize   String?
  foundedYear    String?
  specialities   String?
  overview       String?

  userId String @unique
  user   User   @relation("UserCompany", fields: [userId], references: [id])
  jobs           Job[]
}

model Job {
  id          String       @id @default(uuid())
  title       String
  description String
  companyId   String
  company     Company      @relation(fields: [companyId], references: [id])
  createdBy   String       // ID of the admin who posted the job
  salary      String?      
  location    String?      
  skills      String?      
  experience  String?      
  applicants  AppliedJob[] @relation("JobApplications")
}

model AppliedJob {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], name: "UserApplications")
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id], name: "JobApplications")
  
  appliedAt DateTime @default(now())
  @@unique([userId, jobId])
}

enum Role {
  USER
  ADMIN
}
